{
	"name": "@doyourthing/core",
	"version": "0.0.0",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"license": "GPL-3.0",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "yarn clean && yarn build:js && yarn build:types",
		"build:js": "node ./scripts/build.mjs",
		"build:types": "tsc",
		"dev": "yarn clean && concurrently \"yarn build:js --watch\" \"yarn build:types --watch\" --kill-others --names \"ESB,TSC\" -c \"yellow,blue\"",
		"lint": "TIMING=1 eslint src/**/*.ts* --fix",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"nodemod:list": "find . -name \"node_modules\" -type d -prune | xargs du -chs",
		"nodemod:remove": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +"
	},
	"devDependencies": {
		"@doyourthing/tsconfig": "*",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"autoprefixer": "10.4.19",
		"chalk": "5.3.0",
		"esbuild": "0.23.0",
		"esbuild-node-externals": "1.14.0",
		"esbuild-plugin-external-global": "1.0.1",
		"eslint": "9.7.0",
		"eslint-config-doyourthing": "*",
		"postcss": "8.4.40",
		"rimraf": "6.0.1",
		"tailwindcss": "3.4.6",
		"typescript": "5.5.4"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.pkg.github.com"
	},
	"dependencies": {
		"@doyourthing/utils": "*",
		"classnames": "^2.3.2",
		"next": "^14.0.1",
		"phosphor-react": "^1.4.1",
		"react": "18.3.1",
		"react-dom": "^18.2.0"
	}
}
