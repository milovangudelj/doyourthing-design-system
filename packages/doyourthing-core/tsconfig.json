{
	"extends": "@doyourthing/tsconfig/react-library.json",
	"include": ["./src"],
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist",
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": true
	},
	"exclude": [
		"dist",
		"build",
		"node_modules",
		"**/*.spec.ts*",
		"**/*.test.ts*",
		"**/*.stories.ts*"
	]
}
