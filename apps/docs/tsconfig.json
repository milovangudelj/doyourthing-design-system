{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"include": ["./stories"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "./dist",
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": true
	},
	"exclude": ["node_modules", "**/*.spec.ts*", "**/*.test.ts*"]
}